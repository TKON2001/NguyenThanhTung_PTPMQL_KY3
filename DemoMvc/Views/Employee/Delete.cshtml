@model DemoMvc.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h1>Delete Employee</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.EmployeeId)</dt>
        <dd class = "col-sm-10">@Model.EmployeeId</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class = "col-sm-10">@Model.FullName</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Address)</dt>
        <dd class = "col-sm-10">@Model.Address</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class = "col-sm-10">@Model.Email</dd>
        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Age)</dt>
        <dd class = "col-sm-10">@Model.Age</dd>
    </dl>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
